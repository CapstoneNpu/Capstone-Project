<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="course.android.com.npuapplication.OtherInfoHome">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="268dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/npu"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.004" />

    <Button
        android:id="@+id/libBtn"
        android:layout_width="189dp"
        android:layout_height="124dp"
        android:alpha="0.7"
        android:background="@color/colorAccent"
        android:text="e-Library"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="269dp" />

    <Button
        android:id="@+id/eatBtn"
        android:layout_width="189dp"
        android:layout_height="124dp"
        android:alpha="0.7"
        android:background="@color/colorPrimary"
        android:text="Amentities"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/transportBtn"
        android:layout_width="189dp"
        android:layout_height="124dp"
        android:alpha="0.7"
        android:background="@color/place_autocomplete_search_hint"
        android:text="Transportation"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="189dp"
        android:layout_height="124dp"
        android:alpha="0.7"
        android:background="@color/cast_intro_overlay_button_background_color"
        android:text="Campus Map"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="269dp" />

</android.support.constraint.ConstraintLayout>
