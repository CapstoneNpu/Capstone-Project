<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="course.android.com.npuapplication.Home_2Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/colappsingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="?attr/colorPrimary"
            app:title="NPU"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:background="@drawable/npu">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarid"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <ImageButton
                android:id="@+id/btn_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:onClick="btn_otherinfo"
                android:background="@drawable/maps"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/btn_shuttle"
                android:layout_alignStart="@+id/btn_shuttle" />

            <ImageButton
                android:id="@+id/btn_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/news"
                android:layout_marginRight="39dp"
                android:layout_marginEnd="39dp"
                android:layout_alignTop="@+id/btn_maps"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11dp" />

            <ImageButton
                android:id="@+id/btn_shuttle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/bus"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/btn_soclmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnSocialMedia_onClick"
                android:background="@drawable/social"
                android:layout_alignTop="@+id/btn_shuttle"
                android:layout_alignLeft="@+id/btn_news"
                android:layout_alignStart="@+id/btn_news" />

            <ImageButton
                android:id="@+id/btn_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/btn_shuttle"
                android:layout_alignStart="@+id/btn_shuttle"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="10dp"
                android:background="@drawable/rest"
                android:onClick="btn_eateries" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maps"
                android:textSize="20dp"
                android:layout_below="@+id/btn_maps"
                android:layout_alignRight="@+id/btn_shuttle"
                android:layout_alignEnd="@+id/btn_shuttle"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_news"
                android:layout_alignRight="@+id/btn_news"
                android:layout_below="@+id/btn_maps"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:textSize="20dp"
                android:text="News" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Shuttle"
                android:layout_below="@+id/btn_shuttle"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Media"
                android:textSize="20dp"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignRight="@+id/btn_soclmd"
                android:layout_alignEnd="@+id/btn_soclmd" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dining"
                android:textSize="20dp"
                android:layout_below="@+id/btn_rest"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <ImageButton
                android:id="@+id/btn_myacct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_soclmd"
                android:layout_alignStart="@+id/btn_soclmd"
                android:layout_alignTop="@+id/btn_rest"
                android:layout_marginTop="12dp"
                android:background="@drawable/accnt"
                android:layout_alignBottom="@+id/btn_rest"
                android:layout_alignRight="@+id/btn_news"
                android:layout_alignEnd="@+id/btn_news"
                android:onClick="btnCourseHomePage_onClick"/>

            <TextView
                android:id="@+id/txt_myacct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_myacct"
                android:layout_alignStart="@+id/btn_myacct"
                android:layout_below="@+id/btn_myacct"
                android:text="My Account"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/btn_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView6"
                android:layout_alignRight="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="29dp"
                android:onClick="btn_lib"
                app:srcCompat="@drawable/lib" />

            <TextView
                android:id="@+id/btn_lib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="e-Library"
                android:layout_below="@+id/btn_library"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
